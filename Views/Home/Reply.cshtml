@{
    ViewBag.Title = "Reply";
    Layout = "~/Views/Shared/_Factory.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Reply About Article</h3>
        <hr />

        <div>
            @{
                if (ViewBag.Result != null)
                {
                    <h4>@ViewBag.Result</h4>
                }
            }
        </div>



        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Reply", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Reply", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Reply", "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexEditor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

