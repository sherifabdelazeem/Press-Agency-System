@model IEnumerable<NewsWebApp.Models.PostViewMoedl>

@{ 
    
    Layout = "~/Views/Shared/_Factory.cshtml";
}




@foreach (var gr in Model)
{
    <h3> @gr.ArticleTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Asker Name
            </th>
            <th>
                The Message
            </th>
            <th>
                Answer
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
    <tr>
        <td>
            @item.user.UserName
        </td>
        <td>
            @item.Message
        </td>
        <td>
            @item.Reply
        </td>
        <td>
            @Html.ActionLink("Reply", "Reply",new {id = item.Id}, new { @class = "btn btn-default" })
        </td>

    </tr>
        }
    </table>
}
@Html.ActionLink("Back to Home", "Index", new { @class = "btn btn-default" })

